<tr>
    <td><%= source.title %></td>
    <td>
        <div class="button-group">
            <%= link_to 'View', source, class: "button" %>
            <% if user_signed_in? %>
                <%= link_to 'Edit', edit_source_path(source), class: "button" %>
                <%= link_to 'Delete', source, class: "button", data: {
                    turbo_confirm: 'Are you sure?',
                    turbo_method: :delete
                } %>
            <% end %>
        </div>
    </td>
</tr>