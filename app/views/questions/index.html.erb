<h1>Questions</h1>
<%= render 'layouts/flash' %>
<%= user_signed_in? ? link_to('New Question', new_question_path, class: 'button') : '' %>
<style>
    tr[data-url] {
        cursor: pointer;
    }
</style>
<table class="hover" id="question-index">
    <thead>
        <tr>
            <th>Question</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <%= render @questions %>
    </tbody>
</table>
<script>
    $(document).ready(function() {
        $('tr[data-url]').on('click', function(event) {
        if ($(event.target).is('a')) {
            return;
        }
        var url = $(this).data('url');
        if (url) {
            window.location.href = url;
        }
    });
    });
</script>
<%= render 'layouts/shortcut_new', path: new_question_path %>