<h1><%= @question.text %></h1>
<%= render 'layouts/flash' %>
<table>
<% @question.answer_choices.each do |answer| %>
    <tr>
        <td><%= answer.text %></td>
    </tr>
<% end %>
</table>
<%= user_signed_in? ? link_to('Edit', edit_question_path(@question), class: 'button') : '' %>
<%= link_to 'Back', questions_path, class: 'button' %>