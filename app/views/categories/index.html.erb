<h1>Categories</h1>
<%= render 'layouts/flash' %>
<%= user_signed_in? ? link_to('New Category', new_category_path, class: 'button') : '' %>

<table class="hover relaxed limit-text">
    <colgroup>
        <col style="width: auto;">
        <col style="width: 12rem;" class="show-for-medium">
    </colgroup>
    <thead>
        <tr>
            <th>Name</th>
            <th class="show-for-medium"></th>
        </tr>
    </thead>
    <tbody>
        <%= render_category_tree(@category_tree) %>
    </tbody>
</table>
<%= render 'layouts/shortcut_new', path: new_category_path %>